{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose: up",
            "type": "shell",
            "command": "docker",
            "args": [ "compose", "up" ]
        },
        {
            "label": "docker-compose: down",
            "type": "shell",
            "command": "docker",
            "args": [ "compose", "down" ]
        },
        {
            "label": "docker-volume: prune",
            "type": "shell",
            "command": "docker",
            "args": [ "volume", "prune", "--all" ]
        },
        {
            "label": "mysql: init-source",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--name",
                "${config:source-init}",
                "-e",
                "MYSQL_ROOT_PASSWORD=root",
                "-v",
                "${config:source-init}:/var/lib/mysql",
                "-v",
                "./source-init.cnf:/etc/my.cnf:ro",
                "mysql:5.7",
            ]
        },
        {
            "label": "mysql: init-replica",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--name",
                "${config:replica-init}",
                "-e",
                "MYSQL_ROOT_PASSWORD=root",
                "-v",
                "${config:replica-init}:/var/lib/mysql",
                "-v",
                "./replica-init.cnf:/etc/my.cnf:ro",
                "mysql:5.7",
            ]
        },
        {
            "label": "init: replica-stop",
            "type": "shell",
            "command": "docker",
            "args": [ "stop", "${config:replica-init}"]
        },
        {
            "label": "init: source-stop",
            "type": "shell",
            "command": "docker",
            "args": [ "stop", "${config:source-init}"]
        },
        {
            "label": "build: init",
            "type": "shell",
            "command": "docker",
            "args": [ "build", "-t", "mysql:init", "." ]
        },
        {
            "label": "mysql: replication",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": ["docker-compose: up", "docker-compose: down", "docker-volume: prune"]
        },
        {
            "label": "init: start",
            "type": "shell",
            "dependsOrder": "parallel",
            "dependsOn": ["mysql: init-source", "mysql: init-replica"]
        },
        {
            "label": "init: stop",
            "type": "shell",
            "dependsOrder": "parallel",
            "dependsOn": ["init: source-stop", "init: replica-stop"]
        },
    ]
}